@using EduMapBackendProject.DAL.Entities
@model List<User>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-controller="user" asp-action="create" class="btn btn-secondary">Add new user</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">User</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Full Name</th>
                            <th>Desctiption</th>
                            <th>Image</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td>@user.UserName</td>
                                <td class="text-end">
                                    <a asp-controller="feedback" asp-action="update" asp-route-id="@user.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST"asp-controller="user" asp-action="delete" asp-route-id="@user.Id" id="user-form-@user.Id"></form>
                                    <button type="submit" form="user-form-@user.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>