@using EduMapBackendProject.DAL.Entities
@model List<Teacher>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-controller="teacher" asp-action="create" class="btn btn-secondary">Add new teacher</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Course Feauture</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Full Name</th>
                            <th>Positon</th>
                            <th>Degree</th>
                            <th>Image</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var teacher in Model)
                        {
                            <tr>
                                <td>@teacher.FullName</td>
                                <td>@teacher.Position</td>
                                <td>@teacher.Degree</td>
                                <td> <img src="~/img/@teacher.ImagePath" width="10%"> </td>
                                <td class="text-end">
                                    <a asp-controller="teacher" asp-action="update" asp-route-id="@teacher.Id" ><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST"asp-controller="teacher" asp-action="delete" asp-route-id="@teacher.Id" id="teacher-form-@teacher.Id"></form>
                                    <button type="submit" form="courseFeuture-form-@teacher.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>