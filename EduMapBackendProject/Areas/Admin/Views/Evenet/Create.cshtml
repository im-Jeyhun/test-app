@using EduMapBackendProject.Areas.Admin.ViewModels.Event;
@using EduMapBackendProject.DAL.Entities

@model EventCreateViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Evenet</h4>
            </div>
            <div class="card-body">
                <div class="general-label">
                    <form method="POST" asp-controller="evenet" asp-action="create" enctype="multipart/form-data">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label>Tittle</label>
                            <input asp-for="Tittle" class="form-control">
                            <span asp-validation-for="Tittle" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Description</label>
                            <input asp-for="Description" class="form-control">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Address</label>
                            <input asp-for="Address" class="form-control">
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Photo</label>
                            <input asp-for="Photo" class="form-control">
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Date</label>
                            <input asp-for="Date" class="form-control">
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Start Time</label>
                            <input asp-for="StartTime" class="form-control">
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>End Time</label>
                            <input asp-for="EndTime" class="form-control">
                            <span asp-validation-for="EndTime" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Speakers</label>
                            <select asp-for="SpeakerIds" asp-items="@(new SelectList(Model.Speakers , nameof(Event.Id), nameof(Event.Title)))" class="form-select get-subcategories">                            </select>
                            <span asp-validation-for="SpeakerIds" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>